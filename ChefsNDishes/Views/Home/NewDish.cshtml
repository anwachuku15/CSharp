@using System;
@using ChefsNDishes.Models;
@model Dish;

<div class="jumbotron">
    <h1>Add a Dish</h1>
</div>
<a href="/">Home</a>

<div class="col-sm-12">
    <form asp-action="AddDish" asp-controller="Home" method="POST">
        <div class="form-group col-sm-5">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group col-sm-5">
            <label asp-for="Calories"></label>
            <input asp-for="Calories" value='0' class="form-control">
            <span asp-validation-for="Calories"></span>
        </div>
        <div class="form-group col-sm-5">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description"></span>
        </div>
        <div class="form-group col-sm-5">
            <label asp-for="ChefId"></label>
            <select asp-for="ChefId" class="form-control">
                @foreach(var chef in ViewBag.Chefs)
                {
                    <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
                    Console.WriteLine(@chef.ChefId);
                }
            </select>
        </div>
        <div class="form-group col-sm-2">
            <label asp-for="Tastiness"></label>
            <select asp-for="Tastiness" class="form-control">
                @for(var i=1; i<6; i++)
                {
                    <option>@i</option>
                }
            </select>
            <span asp-validation-for="Tastiness"></span>
        </div>
        <input type="submit" value="Add Dish" class="btn btn-primary" />
    </form>
</div>

